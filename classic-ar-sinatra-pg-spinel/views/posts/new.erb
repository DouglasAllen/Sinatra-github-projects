<h3>New Post</h3>
<form action='/posts' method='post' name='post'>
  <label for='post_title'>Title:</label><br>
  <input id='post_title' name='post[title]' type='text' value="<%= @post.title %>" />
  <br />

  <label for='post_body'>Body:</label><br>
  <textarea id='post_body' name='post[body]' rows='10'><%= @post.body %></textarea>
  <script>CKEDITOR.replace( 'post_body' );</script>
  <br />

  <label for='post_published'>Published:</label><br>
  <label><input type='radio' name='post[published]' value='true' checked>Yes</label>
  <br>
  <label><input type='radio' name='post[published]' value='false'>No</label>
  <br />

  <input type='submit' value='Submit'>
</form>

